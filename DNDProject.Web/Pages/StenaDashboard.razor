@page "/stena"
@inject HttpClient Http
@using System.Net.Http.Json

<h3>Stena – database overblik</h3>

@if (errorMessage is not null)
{
    <div class="alert alert-danger">
        Kan ikke hente data fra API'et:<br />
        @errorMessage
    </div>
}
else if (isLoading)
{
    <p><em>Henter data fra Stena-databasen...</em></p>
}
else if (summary is null)
{
    <p>Ingen data.</p>
}
else
{
    <div class="row g-3">

        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Kapacitet_og_enhed_opdateret</h5>
                    <p class="display-6">@summary.KapacitetOgEnhedRows.ToString("N0")</p>
                    <small class="text-muted">rækker</small>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Kørselsordrer</h5>
                    <p class="display-6">@summary.KoerselsordrerRows.ToString("N0")</p>
                    <small class="text-muted">rækker (tømninger)</small>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Modtagelse</h5>
                    <p class="display-6">@summary.ModtagelseRows.ToString("N0")</p>
                    <small class="text-muted">rækker (vejninger)</small>
                </div>
            </div>
        </div>

    </div>

    <div class="row g-3 mt-3">
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Modtagelsesinfo 2024</h5>
                    <p class="display-6">@summary.Modtagelsesinfo2024Rows.ToString("N0")</p>
                    <small class="text-muted">rækker</small>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Modtagelsesinfo 2025</h5>
                    <p class="display-6">@summary.Modtagelsesinfo2025Rows.ToString("N0")</p>
                    <small class="text-muted">rækker</small>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Modtagelsesinfo i alt</h5>
                    <p class="display-6">@summary.ModtagelsesinfoTotal.ToString("N0")</p>
                    <small class="text-muted">rækker (2024 + 2025)</small>
                </div>
            </div>
        </div>
    </div>

    <hr class="mt-4" />

    <p>
        <strong>Debug:</strong> rå JSON fra API'et:<br />
        <code>@System.Text.Json.JsonSerializer.Serialize(summary)</code>
    </p>
}

@code {
    private StenaRawSummaryDto? summary;
    private string? errorMessage;
    private bool isLoading = true;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            // HttpClient i Web-projektet har allerede BaseAddress sat til API'et,
            // så vi kan nøjes med en relativ sti:
            summary = await Http.GetFromJsonAsync<StenaRawSummaryDto>(
                "api/stena/raw/summary");
        }
        catch (Exception ex)
        {
            errorMessage = ex.Message;
        }
        finally
        {
            isLoading = false;
        }
    }

    private sealed class StenaRawSummaryDto
    {
        public int KapacitetOgEnhedRows { get; set; }
        public int KoerselsordrerRows   { get; set; }
        public int ModtagelseRows       { get; set; }
        public int Modtagelsesinfo2024Rows { get; set; }
        public int Modtagelsesinfo2025Rows { get; set; }
        public int ModtagelsesinfoTotal { get; set; }
    }
}
